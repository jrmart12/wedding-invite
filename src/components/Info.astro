<section class="py-20 px-6 flex flex-col items-center justify-center bg-[#D8E2E9] relative overflow-hidden">
    <!-- Background Envelope Flap Effect -->
    <div class="absolute top-0 left-0 w-full h-full pointer-events-none opacity-50">
         <!-- Using image 7.png (envelope back) as a subtle background element -->
         <img src="/images/7.png" alt="" class="absolute -top-20 -left-20 w-96 opacity-20 transform rotate-12" />
    </div>

    <div class="relative w-full max-w-md space-y-8 z-10">
        
        <!-- Cards Container -->
        <div class="space-y-6">
            <!-- Dress Code Card -->
            <div class="bg-[#FDFBF7] p-8 rounded-lg shadow-lg text-center transform rotate-1 hover:rotate-0 transition-transform duration-500 relative" data-aos="fade-right">
                <!-- Small card image decoration -->
                <img src="/images/5.png" alt="" class="absolute top-2 right-2 w-8 opacity-20" />
                
                <h3 class="text-xs uppercase tracking-widest text-gray-500 mb-3">Codigo de Vestimenta</h3>
                <p class="text-2xl font-serif text-gray-800">Formal</p>
                <div class="mt-4 w-8 h-px bg-gray-300 mx-auto"></div>
            </div>

            <!-- No Kids / Transfer Card -->
            <div class="bg-[#FDFBF7] p-8 rounded-lg shadow-lg text-center transform -rotate-1 hover:rotate-0 transition-transform duration-500 relative" data-aos="fade-left" data-aos-delay="200">
                <h3 class="text-xs uppercase tracking-widest text-gray-500 mb-3">Información Importante</h3>
                <p class="text-2xl font-serif text-gray-800 mb-1">Con cariño, la recepción será solo para adultos.</p>
                <p class="text-xs text-gray-400 italic">Agradecemos su comprensión</p>
                
                <div class="mt-6 pt-6 border-t border-gray-100">
                    <h3 class="text-xs uppercase tracking-widest text-gray-500 mb-2">Regalo</h3>
                    <p class="text-sm text-gray-600">Lluvia de Sobres</p>
                </div>
            </div>
        </div>

    </div>
</section>
