<section class="py-20 px-6 flex flex-col items-center relative min-h-screen">

    <!-- Decorative Shadow Bottom Left -->
    <div class="absolute bottom-0 w-2xl h-screen right-0 pointer-events-none opacity-10" data-aos="fade-right">
        <img src="/images/bgdetails.png" alt="" class="w-full h-screen object-cover" loading="lazy" />
    </div>

    <div class="relative w-full max-w-md h-[600px] mx-auto">
        <!-- Blue Envelope (Top Left) -->
        <div class="absolute top-0 -left-10 z-0" data-aos="fade-right" data-aos-duration="1000">
            <img src="/images/4.png" alt="Envelope" class="w-full h-100 object-cover" loading="lazy" />
        </div>

        <!-- Main Invitation Card (Center, overlapping) -->
        <div class="absolute top-50 left-22 z-20 w-72 md:w-60" data-aos="fade-up" data-aos-delay="400">
            <div class="relative p-8 md:p-10 text-center bg-cover bg-center w-75 h-115" style="background-image: url('/images/5.png');">
                <!-- Header -->
                <p class="text-[10px] mt-12 uppercase tracking-[0.25em] text-gray-400 leading-relaxed">
                    Con la bendición de Dios<br/>y nuestros padres
                </p>
                
                <!-- Parents Names -->
                <div class="flex justify-center items-start gap-5 text-[10px] font-serif text-gray-600 py-2">
                    <div class="text-right space-y-1">
                        <p>Riley Gough</p>
                        <p>Edna Fagoth</p>
                    </div>
                    <div class="w-px h-10 bg-gray-300"></div>
                    <div class="text-left space-y-1">
                        <p>Dany Hyde</p>
                        <p>Cally Hyde</p>
                    </div>
                </div>

                <!-- Couple Names -->
                <div class="py-1">
                    <h2 class="text-2xl md:text-3xl font-serif text-gray-800 leading-tight">
                        Darsy & Dianne
                    </h2>
                </div>

                <!-- Message -->
                <p class="text-[10px] text-gray-500 leading-relaxed">
                    Deseamos compartir con ustedes<br/>la alegría de nuestro matrimonio
                </p>

                <!-- Date -->
                <div class=" pt-5 space-y-3">
                    <p class="text-[12px] uppercase tracking-wide font-bold text-gray-800">
                        20 DE DICIEMBRE, 2025
                    </p>
                    
                    <!-- Location Details -->
                    <div class="space-y-1 text-[10px] text-gray-500">
                        <p class="uppercase tracking-wider">CEREMONIA RELIGIOSA</p>
                        <p class="font-serif text-xs text-gray-800">Hotel La Quinta, Salón Imperial</p>
                        <p>6:00 PM</p>
                    </div>
          
                
                <!-- Wax Seal -->
                <div class="absolute -bottom-2 z-30 w-15 h-15 left-21">
                    <img src="/images/6.png" alt="Wax Seal" class="w-full h-full object-cover" />
                </div>

            </div>
            <div class="absolute -bottom-30 -right-5 transform -translate-x-1/2 w-80 h-80 z-25">
                    <img src="/images/7.png" alt="Wax Seal" class="w-full h-full object-cover" />
                </div>
        </div>
    </div>
</section>
