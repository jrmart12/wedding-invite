---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Wedding Invitation - Darsy & Dianne - December 20, 2025" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Open Graph / WhatsApp -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Hyde Gough Wedding" />
		<meta property="og:description" content="Darsy & Dianne - December 20, 2025 - La Ceiba, Honduras" />
		<meta property="og:image" content="/images/whatsapp.png" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Hyde Gough Wedding" />
		<meta name="twitter:description" content="Darsy & Dianne - December 20, 2025 - La Ceiba, Honduras" />
		<meta name="twitter:image" content="/images/whatsapp.png" />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Montserrat:wght@300;400;500&family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#F5F5F0] text-gray-800 font-sans antialiased overflow-x-hidden">
		<!-- Mobile Only Modal -->
		<div id="desktop-modal" class="fixed inset-0 bg-black bg-opacity-90 z-[9999] flex items-center justify-center p-6 hidden">
			<div class="bg-white rounded-lg shadow-2xl max-w-md w-full p-8 text-center">
				<div class="mb-6">
					<svg class="w-20 h-20 mx-auto text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
					</svg>
				</div>
				<h2 class="text-3xl font-serif text-gray-800 mb-4">Mobile Only</h2>
				<p class="text-gray-600 mb-6 leading-relaxed">
					This wedding invitation is designed to be viewed on mobile devices only. 
					Please open this link on your smartphone for the best experience.
				</p>
				<div class="text-sm text-gray-500">
					üíê Darsy & Dianne
				</div>
			</div>
		</div>
		
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-serif: 'Playfair Display', serif;
		--font-sans: 'Montserrat', sans-serif;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-serif);
	}
	body {
		font-family: var(--font-sans);
	}
</style>

<script>
	import AOS from 'aos';
	import 'aos/dist/aos.css';
	
	AOS.init({
		duration: 1000,
		once: true,
		offset: 50,
	});
</script>

<script is:inline>
	// Check if device is mobile and show modal if not
	function checkMobileOnly() {
		const MOBILE_MAX_WIDTH = 768; // Max width for mobile devices
		const modal = document.getElementById('desktop-modal');
		
		if (!modal) return;
		
		if (window.innerWidth > MOBILE_MAX_WIDTH) {
			// Desktop detected - show modal and prevent scrolling
			modal.classList.remove('hidden');
			document.body.style.overflow = 'hidden';
		} else {
			// Mobile detected - hide modal and allow scrolling
			modal.classList.add('hidden');
			document.body.style.overflow = 'auto';
		}
	}
	
	// Check on page load
	checkMobileOnly();
	
	// Check on window resize
	window.addEventListener('resize', checkMobileOnly);
</script>
