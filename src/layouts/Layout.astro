---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Wedding Invitation - Darsy & Dianne - December 20, 2025" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Open Graph / WhatsApp -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Hyde Gough Wedding" />
		<meta property="og:description" content="Darsy & Dianne - December 20, 2025 - La Ceiba, Honduras" />
		<meta property="og:image" content="/images/whatsapp.png" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Hyde Gough Wedding" />
		<meta name="twitter:description" content="Darsy & Dianne - December 20, 2025 - La Ceiba, Honduras" />
		<meta name="twitter:image" content="/images/whatsapp.png" />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#F5F5F0] text-gray-800 font-sans antialiased overflow-x-hidden">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-serif: 'Playfair Display', serif;
		--font-sans: 'Montserrat', sans-serif;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-serif);
	}
	body {
		font-family: var(--font-sans);
	}
</style>

<script>
	import AOS from 'aos';
	import 'aos/dist/aos.css';
	
	AOS.init({
		duration: 1000,
		once: true,
		offset: 50,
	});
</script>
